pipeline {
    agent any
    tools{
        jdk 'jdk11'
        maven 'maven3'
    }
    
    environment {
        SCANNER_HOME = tool 'sonar-scanner'
    }
    
    stages {
        stage("Git Checkout") {
            steps {
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/Leonardo-009/conversao-temperatura.git'
            }
        }

    stage("Sonarqube Analysis") {
        steps {
            sh "mvn clean package"
            sh ''' mvn sonar:sonar -Dsonar.url=http://localhost:9000/ -Dsonar.login=squ_f26ff7a8d391083c3a78df02e905de046673c9cf  -Dsonar.projectName=DevSecOps-CI_CD \
            -Dsonar.java.binaries=. \
            -Dsonar.projectKey=DevSecOps-CI_CD '''
            }
        }
    }
}
