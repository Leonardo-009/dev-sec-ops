pipeline {
    agent any

    tools {
        nodejs 'node'
        jdk 'jdk11'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
    }

    stages {
        stage("Git Checkout") {
            steps {
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/Leonardo-009/conversao-temperatura.git'
            }
        }

        stage("Sonarqube Analysis") {
            steps {
                sonarQubeScanner {
                    sonarQubeUrl = "http://localhost:9000/"
                    sonarQubeLogin = "squ_43075f911f17a4795c7ed13133ebd05f0f38679e"
                    sonarQubePassword = "secret"
                }
            }
        }
    }
}
