pipeline {
    agent any
    
    tools {
        nodejs 'node'
        jdk 'jdk11'
    }
    
    environment {
        SCANNER_HOME = tool 'sonar-scanner'
    }
    
    stages {
        stage("Git Checkout") {
            steps {
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/Leonardo-009/dev-sec-ops.git'
            }
        }

        stage("Sonarqube Analysis") {
            steps {
                script {
                    sh "npm install"
                    sh '''sonar-scanner -Dsonar.sources=. -Dsonar.host.url=http://localhost:9000/ \
                        -Dsonar.login=squ_43075f911f17a4795c7ed13133ebd05f0f38679e \
                        -Dsonar.projectName=DevSecOps-CI_CD_JS \
                        -Dsonar.javascript.binaries=. \
                        -Dsonar.projectKey=DevSecOps-CI_CD_JS'''
                }
            }
        }

        stage("Debugging") {
            steps {
                script {
                    sh "echo \$PATH"
                }
            }
        }
    }
}
