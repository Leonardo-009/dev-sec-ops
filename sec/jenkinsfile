pipeline {
    agent any
    
    tools {
        nodejs 'node' // Corrigido para 'nodejs'
        jdk 'jdk11'
    }
    
    environment {
        SCANNER_HOME = tool 'sonar-scanner'
    }
    
    stages {
        stage("Git Checkout") {
            steps {
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/Leonardo-009/conversao-temperatura.git'
            }
        }

        stage("Sonarqube Analysis") {
            steps {
                script {
                    
                    sh "npm install" // Instale as dependÃªncias do projeto JavaScript
                    sh 'npm run test'
                    sh ''' sonar-scanner -Dsonar.sources=. -Dsonar.host.url=http://localhost:9000/ -Dsonar.login=squ_43075f911f17a4795c7ed13133ebd05f0f38679e \
                    -Dsonar.projectName=DevSecOps-CI_CD_JS
                    -Dsonar.javascript.binaries=. \
                    -Dsonar.projectKey=DevSecOps-CI_CD_JS'''
                }
            }
        }
    }
}
