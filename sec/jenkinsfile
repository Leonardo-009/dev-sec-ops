pipeline {
    agent any
    
    environment {
        SCANNER_HOME = tool 'sonar-scanner'
    }

    stages {
        stage("Git Checkout") {
            steps {
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/Leonardo-009/conversao-temperatura.git'
            }
        }

        stage("Sonarqube Analysis") {
            steps {
                script {
                    withSonarQubeEnv('sonar-scanner-global') {
                        sh """
                            mvn sonar:sonar \
                            -Dsonar.host.url=http://localhost:9000/ \
                            -Dsonar.login=squ_5bc0d73fdc460a1a68034470aeb6c01597abf528 \
                            -Dsonar.projectName=Devops-CICD \
                            -Dsonar.java.binaries=. \
                            -Dsonar.projectKey=Devops-CICD
                        """
                    }
                }
            }
        }
    }
}
